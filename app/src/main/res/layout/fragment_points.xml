<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".view.PointsFragment" android:id="@+id/frameLayout">
    <TextView
            android:text="@string/tab_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/text_assists_title"/>
    <TextView
            android:text="textViewTeam1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTeam1Name"
            app:layout_constraintStart_toStartOf="@+id/textViewTeam1City"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeam1City" android:textSize="18sp"/>
    <TextView
            android:text="1."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLabelPosition1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:textSize="12sp" app:layout_constraintTop_toTopOf="@+id/textViewTeam1Points"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="2."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLabelPosition2" app:layout_constraintStart_toStartOf="@+id/textLabelPosition1"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/textViewTeam2Points" android:layout_marginTop="8dp"/>
    <TextView
            android:text="textViewTeam2Name"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textViewTeam2Name"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeam2City"
            app:layout_constraintStart_toStartOf="@+id/textViewTeam2City"
    />
    <TextView
            android:text="120.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTeam1Points" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textLabelPosition1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text_assists_title" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="120.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTeam2Points" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textLabelPosition2"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeam1Name"/>
    <TextView
            android:text="textViewTeam1City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTeam1City"
            app:layout_constraintStart_toEndOf="@+id/textViewTeam1Points" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewTeam1Points"/>
    <TextView
            android:text="PTS/GM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLabelCategory1" android:textSize="8sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeam1Points"
            app:layout_constraintEnd_toEndOf="@+id/textViewTeam1Points"
    />
    <TextView
            android:text="PTS/GM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLabelCategory2" android:textSize="8sp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTeam2Points"
            app:layout_constraintEnd_toEndOf="@+id/textViewTeam2Points"/>
    <TextView
            android:text="textViewTeam2City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTeam2City" app:layout_constraintStart_toStartOf="@+id/textViewTeam1Name"
            app:layout_constraintTop_toTopOf="@+id/textViewTeam2Points"/>
</android.support.constraint.ConstraintLayout>